    <button class="yes" onclick="loveMe()">YesðŸ¥°</button>
    <button class="no" id="noButton" onclick="notLoveMe()">NoðŸ™„</button>

    <p id="response"></p>

    <footer>Â© 2024 Mohitha Sen</footer> <!-- Copyright footer -->

    <script>
        let isMoving = false;

        function loveMe() {
            document.getElementById("response").innerText = "I love you too Riyaz ðŸ˜š";
            document.getElementById("noButton").style.display = "none"; // Hide the no button
        }

        function notLoveMe() {
            if (!isMoving) {
                isMoving = true;
                moveButton();
            }
        }

        function moveButton() {
            const button = document.getElementById("noButton");
            const screenWidth = window.innerWidth;
            const screenHeight = window.innerHeight;
            const buttonWidth = button.offsetWidth;
            const buttonHeight = button.offsetHeight;

            // Generate random position within the viewport
            const newX = Math.random() * (screenWidth - buttonWidth);
            const newY = Math.random() * (screenHeight - buttonHeight - 100); // Leave space for the response text

            button.style.position = "absolute";
            button.style.left = newX + "px";
            button.style.top = newY + "px";

            setTimeout(() => {
                moveButton(); // Move again after a brief pause
            }, 1000); // Change position every second
        }
    </script>

